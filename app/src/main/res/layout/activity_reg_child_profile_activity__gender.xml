<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".register.register_profile.parent.view.RegChildProfileActivity_Name"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_regCP_gender"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:layout_marginTop="@dimen/spacing_in_RegBabyProfileActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reg_child_profile_gender"
        android:id="@+id/txt_regCP_gender" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_in_RegBabyProfileActivity"
        android:orientation="horizontal"
        android:gravity="center">

        <ToggleButton
            android:id="@+id/btnMale_regCP_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_time_selector"
            android:textOn="남"
            android:textOff="남"
            android:textColor="@drawable/btn_text_color_selector"
            android:checked="true"/>

        <ToggleButton
            android:id="@+id/btnFeMale_regCP_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_time_selector"
            android:layout_marginLeft="50dp"
            android:textOn="여"
            android:textOff="여"
            android:textColor="@drawable/btn_text_color_selector"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:layout_marginTop="@dimen/spacing_in_RegBabyProfileActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_previous"
            android:id="@+id/btn_previous_regCP_gender"/>

        <Button
            android:layout_marginTop="@dimen/spacing_in_RegBabyProfileActivity"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_next"
            android:id="@+id/btn_next_regCP_gender"/>

    </LinearLayout>
</LinearLayout>
